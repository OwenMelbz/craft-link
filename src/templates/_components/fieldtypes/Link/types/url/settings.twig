{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: 'Placeholder Text'|t('link'),
    instructions: 'The text that will be shown if the field doesnâ€™t have a value.',
    name: 'placeholder',
    id: 'placeholder',
    value: type.settings.placeholder
}) }}

{{ forms.lightswitchField({
    label: 'Show Text'|t('link'),
    name: 'showText',
    id: 'showText',
    on: type.settings.showText,
