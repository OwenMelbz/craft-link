}) }}

<div id="text-show-field" class="{% if not type.settings.showText %}hidden{% endif %}">
    {{ forms.lightswitchField({
        label: 'Require Text'|t('link'),
        instructions: 'Require the text field to be populated'|t('link'),
        name: 'requireText',
        id: 'requireText',
        on: type.settings.requireText
    }) }}
</div>

{{ forms.lightswitchField({
    label: 'Show option to open in new window'|t('link'),
    name: 'showTarget',
    id: 'showTarget',
    on: type.settings.showTarget
}) }}