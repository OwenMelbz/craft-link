{% import "_includes/forms" as forms %}

{% if type.settings.showText %}
    {{ forms.textField({
        label: 'Text'|t('link'),
        instructions: 'Enter the text for the link'|t('link'),
        name: 'text',
        id: 'text',
        value: type.text,
        errors: type.getErrors('text'),
        required: type.settings.requireText
    }) }}
{% endif %}

    {{ forms.textField({
        label: 'Url'|t('link'),
        instructions: 'Enter the url'|t('link'),
        name: 'url',
        id: 'url',
        value: type.url,
        errors: type.getErrors('url'),
        required: true
    }) }}